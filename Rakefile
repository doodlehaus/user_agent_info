begin
  require 'jeweler'
  Jeweler::Tasks.new do |s|
    s.name = "user_agent_info"
    s.summary = "Simplifies user-agent detection"
    s.email = "mehmet@celik.be"
    s.homepage = "http://github.com/mehmetc/user_agent_info"
